# Home Assistant Configuration
home_assistant:
  url: "http://homeassistant.local:8123"
  token: "your_long_lived_access_token_here"

# Office 365 Configuration
office365:
  client_id: "your_client_id_here"
  client_secret: "not_needed_for_device_flow"  # Can be blank or placeholder
  tenant_id: "common"  # or your specific tenant ID
  calendar_id: "primary"  # or specific calendar ID

# Sync Configuration
sync:
  # Home Assistant calendar entity IDs to sync
  ha_calendars:
    - "calendar.home_calendar"
    - "calendar.personal"

  # How far back to sync events (days)
  days_past: 7

  # How far forward to sync events (days)
  days_future: 90

  # Timezone for interpreting HA event times (if not specified in the event)
  timezone: "Europe/London"

  # Sleep interval between syncs in seconds (default: 900 = 15 minutes)
  sync_interval: 900

  # Delete events from O365 that no longer exist in HA
  delete_removed_events: true
